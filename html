<script>
const input1=document.getElementById('input1');
const input2=document.getElementById('input2');
const mode=document.getElementById('mode');
const result=document.getElementById('result');
const explanation=document.getElementById('explanation');
const usageCounter=document.getElementById('usageCounter');
const historyDiv=document.getElementById('history');
const limitModal=document.getElementById('limitModal');

const DAILY_LIMIT=50;

function getUsage(){
let data=JSON.parse(localStorage.getItem('percentifyUsage'))||{};
let today=new Date().toDateString();
if(data.date!==today){
data={date:today,count:0};
localStorage.setItem('percentifyUsage',JSON.stringify(data));
}
return data;
}

function incrementUsage(){
let data=getUsage();
data.count++;
localStorage.setItem('percentifyUsage',JSON.stringify(data));
return data.count;
}

function updateUsageUI(){
let data=getUsage();
usageCounter.textContent=`${DAILY_LIMIT-data.count} calculations remaining today`;
}

function calculate(){
let data=getUsage();
if(data.count>=DAILY_LIMIT){
limitModal.style.display="flex";
return;
}
let x=parseFloat(input1.value);
let y=parseFloat(input2.value);
if(isNaN(x)||isNaN(y)){
result.textContent="Please enter valid numbers.";
return;
}
incrementUsage();
updateUsageUI();
let res;
if(mode.value=="1"){res=(x/100)*y; explanation.textContent=`Formula: (${x} Ã· 100) Ã— ${y}`;}
if(mode.value=="2"){res=(x/y)*100; explanation.textContent=`Formula: (${x} Ã· ${y}) Ã— 100`;}
if(mode.value=="3"){res=((y-x)/x)*100; explanation.textContent=`Formula: ((${y} - ${x}) Ã· ${x}) Ã— 100`;}
result.textContent="Result: "+res.toFixed(2);
saveHistory(result.textContent);
}

function saveHistory(text){
let history=JSON.parse(localStorage.getItem('percentifyHistory'))||[];
history.unshift(text);
localStorage.setItem('percentifyHistory',JSON.stringify(history.slice(0,10)));
renderHistory();
}

function renderHistory(){
let history=JSON.parse(localStorage.getItem('percentifyHistory'))||[];
historyDiv.innerHTML="<strong>History:</strong><br>"+history.join("<br>");
}

function clearFields(){
input1.value="";input2.value="";
result.textContent="Result: --";
explanation.textContent="";
input1.focus();
}

function copyResult(){
navigator.clipboard.writeText(result.textContent);
}

function toggleFAQ(el){
let ans=el.querySelector('.faq-answer');
ans.style.display=ans.style.display==="block"?"none":"block";
}

function toggleDark(){
document.body.classList.toggle('dark');
localStorage.setItem('percentifyTheme',document.body.classList.contains('dark'));
}

function loadTheme(){
if(localStorage.getItem('percentifyTheme')==="true"){
document.body.classList.add('dark');
}
}

function scrollToTool(){
document.getElementById('tool').scrollIntoView();
}

input1.addEventListener('input',calculate);
input2.addEventListener('input',calculate);
mode.addEventListener('change',calculate);

document.addEventListener('DOMContentLoaded',()=>{
updateUsageUI();
renderHistory();
loadTheme();
input1.focus();
});

const fades=document.querySelectorAll('.fade');
window.addEventListener('scroll',()=>{
fades.forEach(f=>{
if(f.getBoundingClientRect().top<window.innerHeight-100){
f.classList.add('visible');
}
});
});
</script>

